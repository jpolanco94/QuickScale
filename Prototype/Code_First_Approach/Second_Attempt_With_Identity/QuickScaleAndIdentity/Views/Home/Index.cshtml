@model IEnumerable<SavedFretBoard>
<!DOCTYPE html>

<html>
<body>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Root Note</th>
            <th>Mode</th>
            <th>First String Note</th>
            <th>Second String Note</th>
            <th>Third String Note</th>
            <th>Fourth Second String</th>
            <th>Fifth String Note</th>
            <th>Sixth String Note</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody> 
        @foreach(SavedFretBoard p in Model)
        {
            
                <tr>
                    <td class="text-center">@p.RootNote</td>
                    <td class="text-center">@p.Mode</td>
                    <td class="text-center">@p.FirstStringNote</td>
                    <td class="text-center">@p.SecondStringNote</td>
                    <td class="text-center">@p.ThirdStringNote</td>
                    <td class="text-center">@p.FourthStringNote</td>
                    <td class="text-center">@p.FifthStringNote</td>
                    <td class="text-center">@p.SixthStringNote</td>
                    <td>
                        <a asp-action="" asp-controller="" class="btn btn-primary">View Scale</a>
                        <a asp-action="DeleteScale" asp-controller="Home" class="btn btn-primary">Delete Scale</a>
                    </td>
                </tr>
            

        }
    </tbody>
</table>
    </body>
</html>
