@model IEnumerable<User>

<!DOCTYPE html>

<html>
<body>
    <table>
        <thead>
            <tr><td>Username</td><td>Email</td><td>Password</td><td>Actions</td></tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="3" class="text-center">No Accounts</td></tr>
            }
            else
            {
                foreach (var x in Model)
                {
                <tr>
                    <td>@x.Username</td>
                    <td>@x.Email</td>
                    <td>@x.Password</td>
                    <td class="text-center">
                        <form asp-action="Delete" method="post">
                        <input type="hidden" name="UserID" value="@x.UserID" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            Delete User
                        </button>
                        </form>
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Index" asp-controller="Home">Go back</a>
</body>
</html>

